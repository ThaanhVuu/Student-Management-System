<Window x:Class="qlsv_dang_nhap.View.Dang_nhap_view"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:qlsv_dang_nhap.View"
        mc:Ignorable="d"
        Title="Dang_nhap_view" Height="450" Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown"
        Background="Transparent"
        AllowsTransparency="True">
    <Border CornerRadius="12">
        <Border.Background>
            <ImageBrush ImageSource="/images/nen.jpg" Stretch="UniformToFill"/>
        </Border.Background>

        <Border CornerRadius="12"
                BorderThickness="3"
                Opacity="0.95">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#001B48" Offset="0"/>
                    <GradientStop Color="#02457A" Offset="0.75"/>
                    <GradientStop Color="#018ABE" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="#97CADB" Offset="0"/>
                    <GradientStop Color="#D6E8EE" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="ĐĂNG NHẬP"
                               Foreground="#001b48"
                               FontSize="12"
                               FontFamily="Arial"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0"
                               FontWeight="Bold"/>

                    <Button x:Name="btnMinimize"
                            BorderThickness="0"
                            Content="-"
                            Foreground="White"
                            FontSize="20"
                            FontFamily="Arial"
                            Cursor="Hand"
                            Grid.Column="1"
                            Click="btnMinimize_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#124168"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#0094de"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18"
                                        CornerRadius="9"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter Margin="6,-3,-3,3"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="btnClose"
                            BorderThickness="0"
                            Content="x"
                            Foreground="White"
                            FontSize="20"
                            FontFamily="Arial"
                            Cursor="Hand"
                            Grid.Column="2"
                            Click="btnClose_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#b0183d"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#ED4B00"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18"
                                        CornerRadius="9"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter Margin="4,-3.5,-4,3.5"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    
                </Grid>

                <StackPanel Width="250"
                            Grid.Row="2"
                            Margin="0,35,0,0">
                    <Image Source="/Images/Logo_HAU.png"
                           Width="100" Height="100"/>
                    <TextBlock Text="TRƯỜNG ĐẠI HỌC KIẾN TRÚC HÀ NỘI"
                               FontSize="13" TextAlignment="Center" Foreground="#0094de" FontWeight="Bold"/>

                    <TextBlock Text="Tài khoản"
                               Foreground="#124168" FontSize="13" 
                               FontWeight="Bold" FontFamily="Arial"
                               Margin="5,25,0,0"/>
                    <TextBox x:Name="txtUser"
                             FontSize="13"
                             FontWeight="Medium"
                             FontFamily="Arial"
                             Foreground="Black"
                             CaretBrush="#124168"
                             BorderBrush="#124168"
                             BorderThickness="0,0,0,1.2"
                             Height="20"
                             VerticalAlignment="Center"
                             Margin="0,5,0,0"
                             Padding="20,0,0,0">
                        
                        <TextBox.Background>
                            <ImageBrush ImageSource="/Images/icons8-user-48.png"
                                        Stretch="Uniform"
                                        AlignmentX="Left"/>
                        </TextBox.Background>
                        
                    </TextBox>

                    <TextBlock Text="[Mật khẩu]"
                       Foreground="#124168" FontSize="13" 
                       FontWeight="Bold" FontFamily="Arial"
                       Margin="5,15,0,0"/>
                    <PasswordBox x:Name="txtPass"
                     FontSize="13"
                     FontWeight="Medium"
                     FontFamily="Arial"
                     Foreground="Black"
                     CaretBrush="#124168"
                     BorderBrush="#124168"
                     BorderThickness="0,0,0,1.2"
                     Height="20"
                     VerticalAlignment="Center"
                     Margin="0,5,0,0"
                     Padding="20,0,0,0"
                     KeyDown="mk_enter">
                        <PasswordBox.Background>
                            <ImageBrush ImageSource="/Images/icons8-login-50 (1).png"
                    Stretch="Uniform"
                    AlignmentX="Left"/>
                        </PasswordBox.Background>

                    </PasswordBox>

                    <Button x:Name="btnLogin"
                        BorderThickness="0"
                        Margin="0,25,0,0"
                        Content="Đăng nhập"
                        Foreground="White"
                        FontSize="20"
                        FontWeight="Bold"
                        FontFamily="Arial"
                        Cursor="Hand"
                        Grid.Column="2"
                        Click="btnLogin_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#124168"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#0094de"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="150" Height="25"
                                    CornerRadius="9"
                                    Background="{TemplateBinding Background}">  
                                    <ContentPresenter Margin="25,0,0,0"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,10,0,0">
                        <Image Source="/Images/icons8-forgot-password-26.png"
                               Width="12" Height="12"/>
                        <Button Content="[ Quên mật khẩu? ]"
                               x:Name="btnquenmatkhau"
                               Click="btnquenmatkhau_Click"
                               BorderThickness="0"
                               Background="Transparent"
                               FontSize="12"
                               FontWeight="Bold"
                               Cursor="Hand"
                               FontFamily="Montserrat">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Foreground" Value="#124168"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="#b0183d"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style> 
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Border>
</Window>