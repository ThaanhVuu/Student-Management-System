<Window x:Class="qlsv_dang_nhap.View.viewAdmin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:qlsv_dang_nhap.View"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="viewAdmin" Height="720" Width="1080">
    <Grid>
        <TabControl Name="TabControlMain" FontSize="16" Background="White" SelectionChanged="tabSelection">
            <!-- Tab Quản lý sinh viên -->
            <TabItem x:Name="StudentTabb" >
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Images/icon_admin/icons8-student-24.png"
                               Width="16" Height="16"/>
                        <TextBlock Text="Quản lý sinh viên"
                                   FontSize="16" FontFamily="Arial" FontWeight="Bold"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0"
                            BorderBrush="LightGray" BorderThickness="0,0,2,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="45"/>
                                <RowDefinition Height="45"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <!--maSV-->
                            <Border Grid.Row="0" >
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="Mã sinh viên: "
                                               FontSize="14" FontFamily="Arial" FontWeight="Bold"
                                               Margin="10,0,0,0"/>
                                    <TextBox x:Name="msv"
                                               FontSize="14" FontFamily="Arial" Width="132" Height="21"/>
                                </StackPanel>
                            </Border>
                            <!--ho_va_ten-->
                            <Border Grid.Row="1" Margin="0,5,0,0">
                                <Grid Margin="10,0,0,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Border Grid.Row="0">
                                        <TextBlock Text="Họ và tên:"
                                                   FontSize="14" FontFamily="Arial" FontWeight="Bold"
                                                   VerticalAlignment="Center"/>
                                    </Border>
                                    <Border Grid.Row="1">
                                        <TextBox x:Name="hoten" 
                                                 Width="225" Height="20"
                                                 VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                    </Border>
                                </Grid>
                            </Border>
                            <!--Date-->
                            <Border Grid.Row="2">
                                <Grid Margin="10,0,0,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Border Grid.Row="0">
                                        <TextBlock Text="Ngày/Tháng/Năm sinh:"
                                                   FontSize="14" FontFamily="Arial" FontWeight="Bold"
                                                   VerticalAlignment="Center"/>
                                    </Border>
                                    <Border Grid.Row="1">
                                        <TextBox x:Name="dob" 
                                                    Width="225" 
                                                    VerticalAlignment="Center" HorizontalAlignment="Left"/>

                                    </Border>
                                </Grid>
                            </Border>
                            <!--gioi_tinh-->
                            <Border Grid.Row="3" Margin="0,10,0,0">
                                <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                                    <TextBlock Text="Giới Tính: " FontSize="14" FontWeight="Bold"
                                               VerticalAlignment="Center"
                                               />
                                    <ComboBox x:Name="gioitinh" Margin="12,0,0,0"
                                              Width="145" Height="22" FontSize="14"
                                              SelectedIndex="0">
                                        <ComboBoxItem Content="Male" FontSize="14"/>
                                        <ComboBoxItem Content="Female" FontSize="14"/>
                                        <ComboBoxItem Content="Other" FontSize="14"/>
                                    </ComboBox>
                                </StackPanel>
                            </Border>

                            <!--Ngành-->
                            <Border Grid.Row="4">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Ngành" FontSize="14" FontWeight="Bold"
                                               VerticalAlignment="Center"
                                               Margin="10,0,0,0"/>
                                    <ComboBox x:Name="cbProgram" Margin="35,0,0,0"
                                              Width="145" Height="22"
                                              VerticalAlignment="Center"
                                              SelectedIndex="0" FontSize="14" >
                                        <ComboBoxItem Content="7480201" FontSize="14"/>
                                    </ComboBox>
                                </StackPanel>
                            </Border>
                            <!--lớp-->
                            <Border Grid.Row="5" VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Lớp:" FontSize="14" FontWeight="Bold"
                                               Margin="10,0,0,0"/>
                                    <TextBox x:Name="lop" Width="145" Height="22" Margin="51,0,0,0"
                                             FontSize="14"/>
                                </StackPanel>
                            </Border>
                            <!--Trạng thái-->
                            <Border Grid.Row="6">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="Trạng Thái:" FontSize="14" FontWeight="Bold"
                                               Margin="10,0,0,0"
                                               VerticalAlignment="Center"/>
                                    <ComboBox x:Name="trangthai" Width="145" Height="22"
                                              Margin="6,0,0,0" FontSize="14"
                                              SelectedIndex="0"
                                              VerticalAlignment="Center">
                                        <ComboBoxItem Content="Active" FontSize="14"/>
                                        <ComboBoxItem Content="Inactive" FontSize="14"/>
                                        <ComboBoxItem Content="Graduated" FontSize="14"/>
                                        <ComboBoxItem Content="Dropped" FontSize="14"/>
                                    </ComboBox>
                                </StackPanel>
                            </Border>
                            <!--button-->
                            <Border  Grid.Row="7" Margin="0,30,0,0">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Border Grid.Row="0">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>
                                            <!--button them-->
                                            <Border Grid.Row="0">
                                                <Button Content="Thêm Sinh Viên"
                                                        Width="150" Height="30"
                                                        FontWeight="Bold"
														Click="btnThemSinhVien_Click"
                                                        FontSize="14"/>
                                            </Border>
                                            <Border Grid.Row="1">
                                                <Button Content="Sửa Sinh Viên"
                                                        Width="150" Height="30"
                                                        FontWeight="Bold"
                                                        Margin="0,10,00,0"
														Click="btnSuaSinhVien_Click"
                                                        FontSize="14"/>
                                            </Border>
                                            <Border Grid.Row="2"/>
                                        </Grid>
                                    </Border>
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>
                    <Border Grid.Column="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="304*"/>
                                <ColumnDefinition Width="13*"/>
                                <ColumnDefinition Width="507*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="55"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" Grid.ColumnSpan="3">
                                <StackPanel Height="35" Width="300"
                                            Orientation="Horizontal" HorizontalAlignment="Right"
                                            VerticalAlignment="Center">
                                    <Border CornerRadius="5" BorderBrush="Gray" BorderThickness="1" Background="White">
                                        <Grid>
                                            <TextBox x:Name="txtSearchStudent"
                                                     KeyDown="k_studentsearch"
                                                     
                                                     Width="290"
                                                     Height="25"
                                                     FontSize="12"
                                                     Padding="5"
                                                     VerticalContentAlignment="Center"
                                                     Background="Transparent"
                                                     BorderThickness="0"
                                                     Foreground="#000000"
                                                     TextChanged="txtSearch_TextChanged"
                                                     GotFocus="txtSearch_GotFocus"
                                                     LostFocus="txtSearch_LostFocus"/>
                                            <TextBlock x:Name="txtPlaceholderStudent"
                                                       Text="Tìm kiếm..."
                                                       FontSize="14"
                                                       Foreground="Gray"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Left"
                                                       Margin="5,0,0,0"
                                                       IsHitTestVisible="False"/>
                                            <Button x:Name="btnSearchIconStudent"
                                                    Width="20"
                                                    Height="20"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Right"
                                                    Margin="0,0,5,0"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Click="btnSearchIcon_Click">
                                                <Button.Content>
                                                    <Image Source="/Images/icons8-search-50.png"
                                                           Width="20"
                                                           Height="20"/>
                                                </Button.Content>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </StackPanel>
                            </Border>
                            <!--sinh_vienListview-->
                            <Border Grid.Row="1" Grid.ColumnSpan="3">
                                <ListView x:Name = "dssv"
                                          SelectionChanged="dssvSelection"
                                    HorizontalAlignment="Stretch"
                                          VerticalAlignment="Stretch">
                                    <ListView.View >
                                        <GridView>
                                            <GridViewColumn Header="MaSV" Width="Auto" DisplayMemberBinding="{Binding admission_id}"/>
                                            <GridViewColumn Header="Họ Tên" Width="Auto" DisplayMemberBinding="{Binding full_name}"/>
                                            <GridViewColumn Header="Ngày Sinh" Width="Auto" DisplayMemberBinding="{Binding date_of_birth, StringFormat=dd/MM/yyyy}"/>
                                            <GridViewColumn Header="Giới Tính" Width="Auto" DisplayMemberBinding="{Binding gender}"/>
                                            <GridViewColumn Header="Ngành" Width="Auto" DisplayMemberBinding="{Binding program_name}"/>
                                            <GridViewColumn Header="Ngành" Width="0" DisplayMemberBinding="{Binding program_id}"/>
                                            <GridViewColumn Header="Lớp" Width="Auto" DisplayMemberBinding="{Binding class_name}"/>
                                            <GridViewColumn Header="Trạng Thái" Width="Auto" DisplayMemberBinding="{Binding student_status}"/>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>
            <!-- Tab Quản lý tuyển sinh -->

            <TabItem x:Name="AdmissionTabb">

                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Images/icon_admin/icons8-student-registration-30.png" Width="16" Height="16"/>
                        <TextBlock Text="Quản lý tuyển sinh" FontSize="16" FontFamily="Arial" FontWeight="Bold"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" BorderBrush="LightGray" BorderThickness="0,0,2,0">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel Orientation="Vertical" Margin="10">
                                <TextBlock Text="Mã Hồ Sơ Tuyển Sinh:" FontSize="14" FontWeight="Bold"/>
                                <TextBox x:Name="txtMaHoSo" Width="225" Height="20" FontSize="14"/>
                                <TextBlock Text="Tên Chương Trình Đào Tạo:" FontSize="14" FontWeight="Bold" Margin="0,10,0,0"/>
                                <TextBox x:Name="txtTenCTDT" Width="225" Height="20" FontSize="14"/>
                                <TextBlock Text="Họ và Tên:" FontSize="14" FontWeight="Bold" Margin="0,10,0,0"/>
                                <TextBox x:Name="txtHoTen" Width="225" Height="20" FontSize="14" />

                                <TextBlock Text="Ngày Sinh:" FontSize="14" FontWeight="Bold" Margin="0,10,0,0"/>

                                <DatePicker x:Name="dpNgaySinh" Width="225" FontSize="14"/>

                                <TextBlock Text="Giới Tính:" FontSize="14" FontWeight="Bold" Margin="0,10,0,0"/>
                                <ComboBox x:Name="cbGioiTinh" Width="225">
                                    <ComboBoxItem Content="Male" FontSize="14"/>
                                    <ComboBoxItem Content="Female" FontSize="14"/>
                                    <ComboBoxItem Content="Other" FontSize="14"/>
                                </ComboBox>

                                <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                                    <Button x:Name="btnThemHoSo" Content="Thêm Hồ Sơ" 
                                            Width="100" Margin="10,0,5,0"
                                            FontSize="14" FontWeight="Bold"
                                            Click="btnThemHoSo_Click"/>
                                    <Button x:Name="btnSuaHoSo" Content="Sửa Hồ Sơ"
                                            Click="btnSuaHoSo_Click"
                                            Width="100" Margin="5,0,0,0"
                                            FontSize="14" FontWeight="Bold"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                    <Button x:Name="btnXoaHoSo" Content="Xóa Hồ Sơ" 
                                            Click="btnXoaHoSo_Click"
                                            Width="100" Margin="10,0,5,0"
                                            FontSize="14" FontWeight="Bold"/>
                                    <Button x:Name="btnDuyetHoSo" Content="Duyệt Hồ Sơ"
                                            Width="100" Margin="5,0,0,0"
                                            Click="btnDuyetHoSo_Click"
                                            FontSize="14" FontWeight="Bold"/>

                                </StackPanel>

                                <Button x:Name="btnTuChoiHoSo" Content="Từ Chối Hồ Sơ"
                                        Width="210" Margin="0,10,0,0"
                                        Click="btnTuChoiHoSo_Click"
                                        FontSize="14" FontWeight="Bold"/>
                                <TextBox x:Name="sts" Width="0" Height="0" FontSize="14"/>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>

                    <Border Grid.Column="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="55"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0">
                                <StackPanel Height="35" Width="300"
											Orientation="Horizontal" HorizontalAlignment="Right"
											VerticalAlignment="Center">
                                    <Border CornerRadius="5" BorderBrush="Gray" BorderThickness="1" Background="White">
                                        <Grid>
                                            <TextBox x:Name="txtSearchTuyenSinh"
													 Width="290"
													 Height="25"
													 FontSize="12"
													 Padding="5"
													 VerticalContentAlignment="Center"
													 Background="Transparent"
													 BorderThickness="0"
													 Foreground="#000000"
                                                     KeyDown="k_search"
                                                     GotFocus="txtSearchTuyenSinh_GotFocus"
                                                     LostFocus="txtSearchTuyenSinh_LostFocus"
                                                     TextChanged="txtSearchTuyenSinh_TextChanged" HorizontalAlignment="Left" Margin="0,4,0,4"/>
                                            <TextBlock x:Name="txtPlaceholderTuyenSinh"
													   Text="Tìm kiếm hồ sơ..."
													   FontSize="14"
													   Foreground="Gray"
													   VerticalAlignment="Center"
													   HorizontalAlignment="Left"
													   Margin="5,0,0,0"
													   IsHitTestVisible="False"/>
                                            <Button x:Name="btnSearchIconTuyenSinh"
													Width="20"
													Height="20"
													VerticalAlignment="Center"
													HorizontalAlignment="Right"
													Margin="0,0,5,0"
													Background="Transparent"
													BorderThickness="0">
                                                <Button.Content>
                                                    <Image x:Name="abc" Source="/Images/icons8-search-50.png"
														   Width="20"
														   Height="20"/>
                                                </Button.Content>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </StackPanel>
                            </Border>

                            <Border Grid.Row="1">
                                <ListView x:Name="lvAdmission" Margin="10" SelectionChanged="lvAdmission_SelectionChanged" >
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn x:Name="idd" Header="Mã Hồ Sơ" Width="100" DisplayMemberBinding="{Binding admission_id}"/>
                                            <GridViewColumn x:Name="ctdtid" Header="Mã CTDT" Width="100" DisplayMemberBinding="{Binding program_id}"/>
                                            <GridViewColumn x:Name="ctdt" Header="Tên CTDT" Width="200" DisplayMemberBinding="{Binding program_name}"/>
                                            <GridViewColumn x:Name="name" Header="Họ Tên" Width="250" DisplayMemberBinding="{Binding full_name}"/>
                                            <GridViewColumn x:Name="day" Header="Ngày Sinh" Width="100" DisplayMemberBinding="{Binding date_of_birth, StringFormat=dd/MM/yyyy}"/>
                                            <GridViewColumn x:Name="gen" Header="Giới Tính" Width="80" DisplayMemberBinding="{Binding gender}"/>
                                            <GridViewColumn x:Name="sta" Header="Trạng Thái" Width="100" DisplayMemberBinding="{Binding admission_status}"/>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Tab Chương trình đào tạo -->
            <TabItem x:Name="ProgramTabb">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Images/icon_admin/icons8-book-48.png"
                               Width="16" Height="16"/>
                        <TextBlock Text="Chương trình đào tạo"
                                   FontSize="16" FontFamily="Arial" FontWeight="Bold"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Form nhập thông tin chương trình đào tạo -->
                    <Border Grid.Column="0" BorderBrush="LightGray" BorderThickness="0,0,2,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="60"/>
                                <RowDefinition Height="50"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Border Grid.Row="0">
                                        <TextBlock Text="Mã Chương Trình:" 
                                                   FontSize="14" FontWeight="Bold"
                                                   VerticalAlignment="Center" HorizontalAlignment="Left"
                                                   Margin="10,10,0,0"/>
                                    </Border>
                                    <Border Grid.Row="1">
                                        <TextBox x:Name="mct" Width="230" FontSize="14"
                                                 HorizontalAlignment="Left" VerticalAlignment="Center"
                                                 Margin="10,0,0,10"/>
                                    </Border>
                                </Grid>
                            </Border>

                            <Border Grid.Row="1">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Border Grid.Row="0">
                                        <TextBlock Text="Tên Chương Trình:" 
                                                   FontSize="14" FontWeight="Bold"
                                                   VerticalAlignment="Center" HorizontalAlignment="Left"
                                                   Margin="10,0,0,0"/>
                                    </Border>
                                    <Border Grid.Row="1">
                                        <TextBox x:Name="tct" Width="230" FontSize="14"
                                                 HorizontalAlignment="Left" VerticalAlignment="Center"
                                                 Margin="10,0,0,10"/>
                                    </Border>
                                </Grid>
                            </Border>

                            <!-- Buttons -->
                            <Border Grid.Row="2" Margin="0,10,0,0">
                                <StackPanel>
                                    <Button Content="Thêm CTĐT" Width="150" Height="30" FontWeight="Bold" Margin="0,10,0,0" Click="btnThemCTDT_Click"
                                            FontSize="14"/>
                                    <Button Content="Sửa CTĐT" Width="150" Height="30" FontWeight="Bold" Margin="0,10,0,0" Click="btnSuaCTDT_Click"
                                            FontSize="14"/>
                                    <Button Content="Xóa CTĐT" Width="150" Height="30" FontWeight="Bold" Margin="0,10,0,0" Click="btnXoaCTDT_Click"
                                            FontSize="14"/>
                                    <Button Content="Chi Tiết" Width="150" Height="30" FontWeight="Bold" Margin="0,10,0,0" Click="btnChiTiet_Click"
                                            FontSize="14"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Danh sách chương trình đào tạo -->
                    <Border Grid.Column="1">
                        <ListView x:Name="lvCTDT" SelectionChanged="lvCTDTSelected">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn x:Name="a" Header="Mã CTĐT" Width="auto" DisplayMemberBinding="{Binding program_id}"/>
                                    <GridViewColumn x:Name="b" Header="Tên CTĐT" Width="auto" DisplayMemberBinding="{Binding program_name}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Border>
                </Grid>
            </TabItem>


            <!-- Tab Chi tiết CTDT -->
            <TabItem x:Name="CPTabb">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Images/icon_admin/icons8-book-50.png"
                               Width="16" Height="16"/>
                        <TextBlock Text="Chi tiết CTĐT"
                                   FontSize="16" FontFamily="Arial" FontWeight="Bold"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0"
                            BorderBrush="LightGray" BorderThickness="0,0,2,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="100"/>
                            </Grid.RowDefinitions>
                            <!-- Tên chương trình đào tạo -->
                            <Border Grid.Row="0" Margin="10,0,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Tên CTDT:" FontSize="14" FontWeight="Bold"
                                               VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                    <TextBox x:Name="tenCTDT" Width="150" Height="22" Margin="10,0,0,0"/>
                                </StackPanel>
                            </Border>
                            <!-- Danh sách môn học -->
                            <Border Grid.Row="1" Margin="10,5,0,0">
                                <TextBlock Text="Danh sách môn học:" FontSize="14" FontWeight="Bold"/>
                            </Border>
                            <Border Grid.Row="2" Margin="10,0,10,0">
                                <ListView x:Name="miniMonHoc" SelectionChanged="miniMonHocc"
                                            HorizontalAlignment="Stretch"
                                             SelectionMode="Single"  
                                            VerticalAlignment="Stretch">
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn Header="Mã MH" Width="0" DisplayMemberBinding="{Binding course_id}"/>
                                            <GridViewColumn Header="Danh sách môn học" Width="223" DisplayMemberBinding="{Binding course_name}"/>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                            </Border>
                            <!-- Button thêm/xóa môn học -->
                            <StackPanel Grid.Row="3" Orientation="Vertical"
                                        VerticalAlignment="Center">
                                <Button Content="Thêm môn học" Width="120" Height="30" Margin="0,5,0,0" Click="btnThemMonHoc_Click"
                                        FontSize="14" FontWeight="Bold"/>
                                <Button Content="Xóa môn học" Width="120" Height="30" Margin="0,5,0,0" Click="btnXoaMonHoc_Click"
                                        FontSize="14" FontWeight="Bold"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    <Border Grid.Column="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="55"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0">
                                <StackPanel Height="35" Width="300"
                                            Orientation="Horizontal" HorizontalAlignment="Right"
                                             VerticalAlignment="Center">
                                    <Border CornerRadius="5" BorderBrush="Gray" BorderThickness="1" Background="White">
                                        <Grid>
                                            <TextBox x:Name="txtSearchCTDT"
                                                     Width="290"
                                                     Height="25"
                                                     FontSize="12"
                                                     Padding="5"
                                                     VerticalContentAlignment="Center"
                                                     Background="Transparent"
                                                     BorderThickness="0"
                                                     Foreground="#000000"
                                                     TextChanged="txtSearch_TextChanged"
                                                     GotFocus="txtSearch_GotFocus"
                                                     LostFocus="txtSearch_LostFocus"/>
                                            <TextBlock x:Name="txtPlaceholderCTDT"
                                                       Text="Tìm kiếm môn học..."
                                                       FontSize="14"
                                                       Foreground="Gray"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Left"
                                                       Margin="5,0,0,0"
                                                       IsHitTestVisible="False"/>
                                            <Button x:Name="btnSearchIconCTDT"
                                                    Width="20"
                                                    Height="20"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Right"
                                                    Margin="0,0,5,0"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Click="btnSearchIcon_Click">
                                                <Button.Content>
                                                    <Image Source="/Images/icons8-search-50.png"
                                                           Width="20"
                                                           Height="20"/>
                                                </Button.Content>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </StackPanel>
                            </Border>
                            <!-- Danh sách môn học của CTDT -->
                            <Border Grid.Row="1">
                                <ListView x:Name="lvCP"
                                          SelectionChanged="lvCTDTSelected2"
                                    HorizontalAlignment="Stretch"
                                          VerticalAlignment="Stretch">
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn Header="Mã MH" Width="Auto" DisplayMemberBinding="{Binding course_id}"/>
                                            <GridViewColumn Header="Mã MH" Width="0" DisplayMemberBinding="{Binding program_id}"/>
                                            <GridViewColumn Header="Tên môn học" Width="Auto" DisplayMemberBinding="{Binding course_name}"/>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>


            <!-- Tab Môn học -->
            <TabItem x:Name="CourseTabb">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Images/icon_admin/icons8-elective-64.png"
							   Width="16" Height="16"/>
                        <TextBlock Text="Môn học"
								   FontSize="16" FontFamily="Arial" FontWeight="Bold"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="350"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Form nhập thông tin môn học -->
                    <Border Grid.Column="0" BorderBrush="LightGray" BorderThickness="0,0,2,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0">
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left"
                                            Margin="10,0,0,0" Orientation="Horizontal">
                                    <TextBlock Text="Mã Môn Học:" FontSize="14" FontWeight="Bold"/>
                                    <TextBox x:Name="courseId" Width="200" Height="22" Margin="20,0,0,0" FontSize="14"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Row="1">
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left"
                                            Margin="10,0,0,0" Orientation="Horizontal">
                                    <TextBlock Text="Tên Môn Học:" FontSize="14" FontWeight="Bold"/>
                                    <TextBox x:Name="txtNameCourse" Width="200" Height="22" Margin="18,0,0,0" FontSize="14"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Row="2">
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left"
                                            Margin="10,0,0,0" Orientation="Horizontal">
                                    <TextBlock Text="Số tín chỉ:" FontSize="14" FontWeight="Bold"/>
                                    <TextBox x:Name="creditCourse" Width="200" Height="22" Margin="20,0,0,0" FontSize="14"/>
                                </StackPanel>
                            </Border>

                            <!-- Buttons -->
                            <Border Grid.Row="3" Margin="0,20,0,0">
                                <StackPanel>
                                    <Button Content="Thêm Môn Học" Width="150" Height="30" FontWeight="Bold" 
                                            Click="btnThemMH_Click"
                                            FontSize="14" Margin="0,10,0,0"/>
                                    <Button Content="Sửa Môn Học" Width="150" Height="30" FontWeight="Bold" 
                                            Click="btnSuaMH_Click"
                                            FontSize="14" Margin="0,10,0,0"/>
                                    <Button Content="Xóa Môn Học" Width="150" Height="30" FontWeight="Bold"  
                                            Click="btnXoaMH_Click"
                                            FontSize="14" Margin="0,10,0,0"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Danh sách môn học -->
                    <Border Grid.Column="1">
                        <ListView Name="lvMonHoc" SelectionMode="Single" SelectionChanged="courseSelection">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Mã môn học" Width="auto" DisplayMemberBinding="{Binding course_id}"/>
                                    <GridViewColumn Header="Tên môn học" Width="auto" DisplayMemberBinding="{Binding course_name}"/>
                                    <GridViewColumn Header="Số tín chỉ" Width="auto" DisplayMemberBinding="{Binding credit}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
